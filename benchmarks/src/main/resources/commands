
# list topics
kafka-console-producer --broker-list broker:9092  --topic topic_1P_1RF

# consume from beginning
docker exec -it broker kafka-console-consumer --bootstrap-server broker:9092 --topic topic2 --from-beginning
docker exec -it broker /bin/bash

docker stop $(docker ps -a -q)

# run producer benchmark
sbt 'benchmarks/jmh:run -o producer_results.txt monix.kafka.benchmarks.ProducerBenchmark'

# run consumer benchmark
sbt 'benchmarks/jmh:run -o consumer_results.txt monix.kafka.benchmarks.ConsumerBenchmark'